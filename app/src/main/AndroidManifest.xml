<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xmlsn="http://schemas.android.com/apk/res-auto"
    package="com.example.tacademy.ddakgi">

    <uses-sdk android:minSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera2" />
    // 카메라 후레시
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".CameraApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:icon">
        <activity android:name=".SplashIntro.MainActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".HomeTab.activity.FilterActivity" />
        <activity android:name=".SplashIntro.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WriteTab.WriteRoom.activity.WriteRoomActivity" />
        <activity android:name=".WriteTab.WriteMate.activity.WriteMateActivity" />
        <activity android:name=".Search.SearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".WriteTab.WriteRoom.activity.WriteRoomImage" />
        <activity android:name=".WriteTab.WriteRoom.activity.WriteRoomIdentify"></activity>
    </application>

</manifest>