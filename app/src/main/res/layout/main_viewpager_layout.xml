<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="11dp"
    android:paddingRight="11dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardvieww"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7">

                <ImageView
                    android:id="@+id/roomImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/testroom0" />

                <TextView
                    android:id="@+id/beforeLoginShadow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.75"
                    android:background="#131313"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/testroom0" />

                <io.chooco13.NotoTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/introBeforeLog"
                    android:textColor="@color/white"
                    app:fontWeight="demilight" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <io.chooco13.NotoTextView
                        android:id="@+id/introTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textColor="@color/defaultTextColor"
                        android:textSize="16sp"
                        app:fontWeight="medium" />

                    <io.chooco13.NotoTextView
                        android:id="@+id/introLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/subTextColor"
                        android:textSize="13sp"
                        app:fontWeight="regular" />

                    <io.chooco13.NotoTextView
                        android:id="@+id/introPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="@color/subTextColor"
                        android:textSize="13sp"
                        app:fontWeight="regular" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/roominfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginRight="5dp"
                            app:srcCompat="@mipmap/profile" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imageView4"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <io.chooco13.NotoTextView
                                android:id="@+id/introNickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NickName"
                                android:textColor="@color/defaultTextColor"
                                android:textSize="13sp"
                                app:fontWeight="medium" />

                            <io.chooco13.NotoTextView
                                android:id="@+id/introDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textColor="@color/grayTextColor"
                                android:textSize="10sp"
                                app:fontWeight="demilight" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/imagebutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:layout_toLeftOf="@+id/LikeNum"
                            android:background="@android:color/transparent"
                            app:srcCompat="@mipmap/heart_off_btn" />

                        <io.chooco13.NotoTextView
                            android:id="@+id/introHeartNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            android:text="LikeNum"
                            android:textColor="@color/grayTextColor"
                            android:textSize="13sp"
                            app:fontWeight="demilight" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
